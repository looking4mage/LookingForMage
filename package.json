{
  "name": "blacksmith",
  "version": "1.0.0",
  "description": "Backend for Looking for Mage",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "fix:ts": "tslint -p . --fix",
    "lint": "npm run -s lint:ts",
    "lint:ts": "tslint --format codeFrame -p .",
    "start": "tsc && node ./dist/app.js",
    "test": "npm run -s test:unit && npm run -s lint",
    "test:audit": "npm audit",
    "test:unit": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/looking4mage/api.git"
  },
  "keywords": [
    "looking",
    "for",
    "mage"
  ],
  "author": "Looking 4 Mage",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/looking4mage/api/issues"
  },
  "homepage": "https://github.com/looking4mage/api#readme",
  "dependencies": {
    "koa": "^2.8.1",
    "koa-json": "^2.0.2",
    "koa-logger": "^3.2.1",
    "koa-router": "^7.4.0",
    "pg": "^7.12.1",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/expect": "^1.20.4",
    "@types/jest": "^24.0.18",
    "@types/koa": "^2.0.49",
    "@types/koa-json": "^2.0.18",
    "@types/koa-logger": "^3.1.1",
    "@types/koa-router": "^7.0.42",
    "@types/pg": "^7.11.2",
    "@types/winston": "^2.4.4",
    "expect": "^24.9.0",
    "jest": "^24.9.0",
    "ts-jest": "^24.0.2",
    "tslint": "^5.19.0",
    "tslint-consistent-codestyle": "^1.15.1",
    "tslint-immutable": "^6.0.1",
    "tslint-microsoft-contrib": "^6.2.0",
    "typescript": "^3.5.3"
  },
  "engines": {
    "node": "10.x.x",
    "npm": "6.x.x"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "index.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.(ts)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "<rootDir>/src/**/*.test.+(ts|js)"
    ]
  }
}
