{
  "name": "blacksmith",
  "version": "1.0.0",
  "description": "Backend for Looking for Mage",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "fix:ts": "tslint -p . --fix",
    "lint": "npm run -s lint:ts",
    "lint:ts": "tslint --format codeFrame -p .",
    "start": "tsc && node ./dist/app.js",
    "test": "npm run -s test:unit && npm run -s lint",
    "test:audit": "npm audit",
    "test:unit": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/looking4mage/api.git"
  },
  "keywords": [
    "looking",
    "for",
    "mage"
  ],
  "author": "Looking 4 Mage",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/looking4mage/api/issues"
  },
  "homepage": "https://github.com/looking4mage/api#readme",
  "dependencies": {
    "bcrypt": "^3.0.7",
    "dotenv": "^8.2.0",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.11.0",
    "koa-bodyparser": "^4.2.1",
    "koa-json": "^2.0.2",
    "koa-logger": "^3.2.1",
    "koa-router": "^8.0.6",
    "pg": "^7.17.1",
    "pgmock2": "^2.0.0-beta.8",
    "uuid": "^3.4.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/expect": "^24.3.0",
    "@types/jest": "^24.9.1",
    "@types/koa": "^2.11.0",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-json": "^2.0.18",
    "@types/koa-logger": "^3.1.1",
    "@types/koa-router": "^7.4.0",
    "@types/pg": "^7.14.1",
    "@types/winston": "^2.4.4",
    "@types/bcrypt": "^3.0.0",
    "@types/jsonwebtoken": "^8.3.7",
    "@types/uuid": "^3.4.6",
    "expect": "^25.1.0",
    "jest": "^25.1.0",
    "knex": "^0.20.8",
    "ts-jest": "^25.0.0",
    "tslint": "^6.0.0",
    "tslint-consistent-codestyle": "^1.16.0",
    "tslint-immutable": "^6.0.1",
    "tslint-microsoft-contrib": "^6.2.0",
    "typescript": "^3.7.5"
  },
  "engines": {
    "node": "10.x.x",
    "npm": "6.x.x"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "index.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.(ts)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json",
        "diagnostics": false
      }
    },
    "testMatch": [
      "<rootDir>/src/**/*.test.+(ts|js)"
    ]
  }
}
